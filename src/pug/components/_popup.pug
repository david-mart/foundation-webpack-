//- #buy.reveal.reveal--buy(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    .reveal_inner
        h2.reveal_header
            | Buy tokens
        form.form.form--centered(action="buy")
            input(type="text" name="name" placeholder="Your Name" required)
            input(type="tel" placeholder="Your Telephone" required)
            input(type="email" placeholder="Your E-mail" required)
            button.button.huge Send
    button.reveal_close(aria-label='Close', type='button', data-close)

#member.reveal.reveal--member(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    .reveal_cols
        .reveal_member
            .people_item_photo
                img(src="", alt="")
            .reveal_member_social
                a(href="" target="_blank")
                    +icon('linkedin', [16, 16], '#fff', [13, 13])
        .reveal_member_info.people_item--hogi
            h3.people_item_name
            p.people_item_info
            p.people_item_bio
    button.reveal_close(aria-label='Close', type='button', data-close)